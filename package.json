{
  "name": "nes-emulator",
  "version": "1.0.0",
  "description": "Web-based NES Emulator",
  "main": "dist/nes-emu.js",
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "serve": "python3 -m http.server 8000",
    "test": "node --experimental-modules tests/cpu/cpu-test.mjs run 100",
    "test-full": "node --experimental-modules tests/cpu/cpu-test.mjs run 1000",
    "test-debug": "node --experimental-modules tests/cpu/cpu-test.mjs single 1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "rollup": "^3.0.0"
  }
}